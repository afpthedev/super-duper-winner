# Veritabanı Ayarları
DB_HOST=localhost
DB_PORT=5432
DB_NAME=fbref_db
DB_USER=postgres
DB_PASSWORD=password
DB_ECHO=false

# Web Scraping Ayarları
SCRAPING_DELAY=2.0
SCRAPING_MAX_RETRIES=3
SCRAPING_TIMEOUT=30
SCRAPING_HEADLESS=true
SCRAPING_USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/91.0.4472.124 Safari/537.36

# FBRef Ayarları
FBREF_BASE_URL=https://fbref.com
DEFAULT_SEASON=2024-2025

# Loglama Ayarları
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_FILE_PATH=logs/app.log
LOG_MAX_FILE_SIZE=10485760
LOG_BACKUP_COUNT=5

# Uygulama Ayarları
APP_NAME=FBRef Scraper
APP_VERSION=1.0.0
DEBUG=false
ENVIRONMENT=development

# Docker Ayarları
DOCKER_NETWORK=fbref_network

# Performans Ayarları
BATCH_SIZE=100
MAX_WORKERS=4